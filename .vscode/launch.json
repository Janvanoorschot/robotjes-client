    "version": "0.2.0",
    "configurations": [
        {
            "name": "Robotjes-Web",
            "request": "launch",
            "type": "pwa-chrome",
            "runtimeExecutable": "custom",
            "url": "http://localhost:8765",
            "webRoot": "${workspaceFolder}/www"
        },
        {
            "name": "robotjesengine",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/robotjesengine",
            "console": "integratedTerminal"
        },
        {
            "name": "player_1",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/cli_remote_player",
            "args": [
                "--module",
                "sample.player.player102",
                "--player",
                "player1"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "player_2",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/cli_remote_player",
            "args": [
                "--module",
                "sample.player.player102",
                "--player",
                "player2"
            ],
            "console": "integratedTerminal"
        },
    ]
}